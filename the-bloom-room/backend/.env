# The Bloom Room - Environment Configuration Template
# Copy this file to '.env' and fill in your actual values

# =========================
# Cloudinary Configuration 
# =========================
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# =========================
# Database Configuration
# =========================
DB_HOST=localhost
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=bloom_room_db

# =========================
# Server Configuration
# =========================
PORT=8000
NODE_ENV=development

# =========================
# JWT Configuration
# =========================
JWT_SECRET=your_super_secret_jwt_key_here
JWT_REFRESH_SECRET=your_refresh_secret_here

# =========================
# CORS Configuration
# =========================
# Add your frontend URLs here (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# =========================
# Optional: Debug Settings
# =========================
DEBUG=false
LOG_LEVEL=info

# =========================
# IMPORTANT NOTES:
# =========================
# 1. Never commit this file to version control
# 2. Keep your API keys secure and private
# 3. Use strong, unique secrets for JWT tokens
# 4. Test your Cloudinary credentials in the dashboard first
# 5. Make sure your database is running and accessible